{
  "compilerOptions": {
    "target": "ES2020", // Modern JS features for ESM
    "module": "NodeNext", // Enables ESM behavior for Node
    "moduleResolution": "NodeNext", // Required for module: NodeNext
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
